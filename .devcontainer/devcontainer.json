{
  "name": "Azure DevOps Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu", 
  "postCreateCommand": "./setup.sh",
  "features": {
    "git": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.azure-repos"
      ]
    }
  },
  "remoteEnv": {
    "ADO": "${{ secrets.ADO }}"
  }
}
